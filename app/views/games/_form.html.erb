<%= form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user, :class => 'text_field', placeholder: "Please, enter your name" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :width, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :width, :class => 'number_field', placeholder: "game field width (5..100)" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :height, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :height, :class => 'number_field', placeholder: "game field height (5..100)" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :colors, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :colors, :class => 'number_field', placeholder: "game colors (3..10)" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "New Game", :class => 'btn btn-primary' %>
  </div>
<% end %>
