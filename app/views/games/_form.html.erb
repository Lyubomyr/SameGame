<%= form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
<div id="fields">
  <p>
    <%= f.label :user %>
    <%= f.text_field :user, placeholder: "Please, enter your name" %>
  </p>
  <p>
    <%= f.label :width %>
    <%= f.number_field :width, placeholder: "game field width (5..20)" %>
  </p>
  <p>
    <%= f.label :height %>
    <%= f.number_field :height, placeholder: "game field height (5..20)" %>
  </p>
  <p>
    <%= f.label :colors %>
    <%= f.number_field :colors, placeholder: "game colors (3..10)" %>
  </p>
  <p>
    <%= f.submit "New Game", :class => 'btn btn-primary' %>
  </p>
</div>
<% end %>
